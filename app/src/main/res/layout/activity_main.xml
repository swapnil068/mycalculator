<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />

        <TextView
            android:id="@+id/tvCalculator1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1pt"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text=""
            android:textColor="#5281e5"

            android:textSize="@dimen/_35ssp" />

        <TextView
            android:id="@+id/tvCalculator2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1pt"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text=""
            android:textColor="#5281e5"
            android:textSize="@dimen/_35ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

        </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="8"
            android:background="#f1eef5"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/sqRoot"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="√"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/percentage"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold">

                    ></TextView>


                <TextView
                    android:id="@+id/backspace"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="⌫"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>

                <TextView
                    android:id="@+id/AC"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:backgroundTint="@color/purple"
                    android:gravity="center"
                    android:padding="@dimen/_5ssp"
                    android:text="AC"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold">
                    >
                </TextView>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>


                <TextView
                    android:id="@+id/nine"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>

                <TextView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">
                    >
                </TextView>


            </TableRow>

            <TableRow
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_50ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/five"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>


                <TextView
                    android:id="@+id/six"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>

                <TextView
                    android:id="@+id/multiply"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="×"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">
                    >
                </TextView>


            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/two"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>


                <TextView
                    android:id="@+id/three"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>

                <TextView
                    android:id="@+id/divide"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="÷"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">
                    >
                </TextView>


            </TableRow>


            <TableRow
                android:id="@+id/trZero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tvZero"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="."
                    android:textColor="#ec7c7c "
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>


                <TextView
                    android:id="@+id/subtract"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#ec7c7c"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">

                    ></TextView>

                <TextView
                    android:id="@+id/equalto"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:backgroundTint="#52c8a4"
                    android:gravity="center"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold">
                    >
                </TextView>


            </TableRow>


        </TableLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
        <include layout="@layout/custom_des" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
